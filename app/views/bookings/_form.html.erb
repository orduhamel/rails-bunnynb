<div class="booking-new">
  <h2>Réserver ce lapin</h2>
  <div class="form booking-form">
    <%= simple_form_for [bunny, booking],
      wrapper: :inline_form,
      html: { class: 'form-inline' },
      wrapper_mappings: {
        boolean: :inline_boolean
      } do |f| %>
        <%= f.input :start_date, as: :date, html5: true, placeholder: 'Date de début', as: :string, required: false, input_html: { id: "range_start" } %>
        <%= f.input :end_date, as: :date, html5: true, placeholder: 'Date de fin', as: :string, required: false, input_html: { id: "range_end" } %>
        <span id="total-price"></span><span>€</span>
        <%= f.submit 'Réserver', class: 'bunny-btn' %>
    <% end %>
  </div>
</div>
