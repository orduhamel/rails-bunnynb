<div class='text-center'>
  <h1 id='bunnies-title'>Rencontrez nos lapins</h1>
</div>

<div class='wrap-container'>

  <div class='main-bunny'>
    <% @bunnies.each do |bunny| %>
      <%= link_to bunny_path(bunny), class: "index-card" do %>
        <div class="card-bunny m-2" style="width: 18rem;">
          <div class="card-body-bunny">
            <%= cl_image_tag bunny.photo.key, class: "bunny-picture" %>
            <h2 class="card-title-bunny"><%= bunny.name %></h2>
              <p class="card-text-bunny"><%= bunny.skill %></p>
              <p id="bunny-price"><%= bunny.price_per_day %>â‚¬</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class='map'>
    <%= image_tag "fausse_map.png", class: "fausse-map" %>
  </div>

</div>


